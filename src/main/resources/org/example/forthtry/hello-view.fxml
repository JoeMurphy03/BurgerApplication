<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller = "org.example.forthtry.HelloController" xmlns:fx="http://javafx.com/fxml" hgap="5" vgap="10">

    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <Text text="Create Your Burger"
          GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

    <Label text="Bun" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <ChoiceBox fx:id="bunBox" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <Label text="Cheese (Slices)" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <RadioButton fx:id="rb1" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <RadioButton fx:id="rb2" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <RadioButton fx:id="rb3" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <RadioButton fx:id="rb4" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <ChoiceBox fx:id="cheeseBox" GridPane.columnIndex="0" GridPane.rowIndex="9"/>

    <Label text="Patty (Amount)" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <RadioButton fx:id="rb5" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <RadioButton fx:id="rb6" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    <RadioButton fx:id="rb7" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    <RadioButton fx:id="rb8" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    <ChoiceBox fx:id="pattyBox" GridPane.columnIndex="1" GridPane.rowIndex="9"/>

    <Label text="Garnishes (up to 4)" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
    <CheckBox fx:id="lettuce" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
    <CheckBox fx:id="tomato" GridPane.columnIndex="2" GridPane.rowIndex="6"/>
    <CheckBox fx:id="onion" GridPane.columnIndex="2" GridPane.rowIndex="7"/>
    <CheckBox fx:id="pickle" GridPane.columnIndex="2" GridPane.rowIndex="8"/>
    <CheckBox fx:id="bacon" GridPane.columnIndex="2" GridPane.rowIndex="9"/>
    <CheckBox fx:id="avocado" GridPane.columnIndex="2" GridPane.rowIndex="10"/>
    <CheckBox fx:id="egg" GridPane.columnIndex="2" GridPane.rowIndex="11"/>
    <CheckBox fx:id="grilledO" GridPane.columnIndex="2" GridPane.rowIndex="12"/>

    <Button fx:id="create" GridPane.columnIndex="0" GridPane.rowIndex="12"/>
    <Button fx:id="resetBurger" GridPane.columnIndex="0" GridPane.rowIndex="13"/>
    <Button fx:id="displayBurgers" GridPane.columnIndex="0" GridPane.rowIndex="14"/>

    <Text fx:id="burgerInfo" GridPane.columnIndex="0" GridPane.rowIndex="15" GridPane.columnSpan="3"/>


</GridPane>
